<%= form_for(PostComment.new, url: post_comments_path(@post), remote: true) do |f| %>
  <div class="highgate">
    <%= f.text_area :content, placeholder: "leave a comment", class: "court" %>
  </div>
  <div class="ellicott">
    <%= f.submit "comment",  class: "exchange" %>
  </div>
<% end %>
