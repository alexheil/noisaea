<% if fan_signed_in? %>
  <div class="winspear">
  <% if fan_signed_in? && current_fan.following_producer?(producer) %>
    <%= button_to "unfollow", producer_relationship_path(producer, current_fan.producer_relationship_id(producer)), method: :delete, remote: true, data: { disable_with: 'unfollowing...' }, class: "seventh" %>
  <% else %>
    <%= form_for(ProducerRelationship.new, url: producer_relationships_path(producer), remote: true) do |f| %>
      <%= f.submit "follow", data: { disable_with: 'following...' }, class: "seventh" %>
    <% end %>
  <% end %>
  </div>
<% end %>
