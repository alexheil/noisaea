<% if @producer.fans.any? %>
  <div class="amherst">
    <%= link_to pluralize(@producer.fans.count, "fan"), producer_followers_path(@producer) %>
    <div class="posted">
      <%= link_to pluralize(@producer.fans.where("current_sign_in_at > ?", 30.days.ago).count, "active fan"), producer_followers_path(@producer) %>
    </div>
  </div>
<% else %>
  <div class="amherst">
    <strong>0 fans</strong>
  </div>
<% end %>
