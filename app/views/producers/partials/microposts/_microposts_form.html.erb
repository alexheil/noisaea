<% if @producer == current_producer %>
  <%= form_for(ProducerMicropost.new, url: producer_microposts_path(@producer), remote: true) do |f| %>
    <%= f.hidden_field :producer_id %>
    <div class="highgate">
      <%= f.text_area :content, placeholder: "what have you been up to?", class: "court" %>
    </div>
    <div class="amherst">
      <a class="tennyson">add a link</a> // <a class="homer">add a photo</a>
    </div>
    <div class="highgate">
      <div class="virgil">
        <%= f.text_field :link_url, placeholder: "add a link", class: "huron" %>
      </div>
    </div>
    <div class="highgate">
      <div class="lovering">
        <%= f.text_field :photo_url, placeholder: "add a photo (url)", class: "huron" %>
      </div>
    </div>
    <div class="ellicott">
      <%= f.submit "post update", data: { disable_with: 'posting...' }, class: "exchange" %>
    </div>
  <% end %>
<% end %>
