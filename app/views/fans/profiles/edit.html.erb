<%= provide(:title, "Edit Your Profile | Noisaea //") %>
<div class="buffalo">
  <div class="delaware">
    <div class="elmwood">
      <div class="harlem">
        <h1>edit your profile</h1>
      </div>

      <%= form_for(@profile, url: fan_profile_path) do |f| %>
        <%= render 'errors/profile_errors' %>
        <div class="highgate">
          <%= f.text_field :website, placeholder: "your website", class: "huron" %>
        </div>
        <div class="highgate">
          <%= f.text_field :location, placeholder: "location", class: "huron" %>
        </div>
        <div class="highgate">
          <%= f.text_area :biography, placeholder: "biography", class: "chippewa" %>
        </div>
        <div class="highgate">
          <%= f.text_field :cover_image, placeholder: "cover image", class: "huron" %>
        </div>
        <div class="highgate">
          <%= f.text_field :profile_image, placeholder: "profile image", class: "huron" %>
        </div>
        <div class="ellicott">
          <%= f.submit "update profile", class: "exchange" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
<%= render 'partials/uni_footer' %>
