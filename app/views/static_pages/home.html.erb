        <div class="m">
          <%= f.text_field :fan_name, placeholder: "your name", class: "huron" %>
        </div>
        <div class="m">
          <%= f.email_field :email, placeholder: "email address", class: "huron" %>
        </div>
        <div class="m">
          <%= f.password_field :password, autocomplete: "off", placeholder: "password", class: "huron" %>
        </div>

        <div class="m">
          <%= f.submit "register", class: "exchange" %>
