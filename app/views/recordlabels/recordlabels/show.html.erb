<%= provide(:title, sanitize(@record_label.label_name)) %>
<div class="buffalo">
  <% if @record_label.record_label_profile.cover_image == "" %>
    <div class="clinton">
      <% if record_label_signed_in? && @record_label.id == current_record_label.id %>
        you do not have a cover image yet. <%= link_to "add one?", edit_record_label_profile_path(current_record_label) %>
      <% else %>
        <%= "#{@record_label.label_name} hasn't uploaded a cover photo yet" %>
      <% end %>
    </div>
  <% else %>
    <div class="broadway">
      <img srcset="<%= @record_label.record_label_profile.cover_image %>" width="100%" height="auto" />
    </div>
  <% end %>
  <div class="delaware">


    <div class="main">
      <div class="hedley">
        <%= @record_label.label_name %>
      </div>

      <div id="following">
        <%= render 'recordlabels/partials/relationships/following' %>
      </div>

      <% if @record_label == current_record_label %>
      <% else %>
      <div class="niagara">
        <div class="harlem">
        <div class="follow_button">
          <%= render 'recordlabels/partials/relationships/follow_button' %>
        </div>
        </div>
      </div>
      <% end %>

      <% if @record_label == current_record_label %>
        <%= form_for(RecordLabelMicropost.new, url: record_label_microposts_path(@record_label)) do |f| %>
          <div class="highgate">
            <%= f.text_area :content, placeholder: "what have you been up to?", class: "court" %>
          </div>
          <div class="ellicott">
            <%= f.submit "post update", class: "exchange" %>
          </div>
        <% end %>
      <% end %>

      <% if @record_label.record_label_microposts.any? %>
        <div class="harlem">
          <% @record_label.record_label_microposts.take(100).each do | micropost | %>
          <div class="harlem dodge">
            <span class="winspear"><strong><%= link_to "#{@record_label.label_name}", record_label_micropost_path(@record_label, micropost) %></strong> posted <%= time_ago_in_words(micropost.created_at) %> ago</span>
                <% if @record_label == current_record_label %>
               // <%= link_to "delete post", record_label_micropost_path(@record_label, micropost), data: { confirm: "Are you sure? This cannot be undone. Ever..." }, method: :delete %></span>
                <% end %>
              <div class="winspear">
                <%= micropost.content %>
              </div>

              <div class="lisbon">

                <% if fan_signed_in? && current_fan.record_label_micropost_voted?(micropost) %>
                  <%= button_to "−", record_label_micropost_vote_path(micropost), method: :delete, class: "linwood" %>
                <% elsif artist_signed_in? && current_artist.record_label_micropost_voted?(micropost) %>
                  <%= button_to "−", record_label_micropost_vote_path(micropost), method: :delete, class: "linwood" %>
                <% elsif record_label_signed_in? && current_record_label.record_label_micropost_voted?(micropost) %>
                  <%= button_to "−", record_label_micropost_vote_path(micropost), method: :delete, class: "linwood" %>
                <% elsif venue_signed_in? && current_venue.record_label_micropost_voted?(micropost) %>
                  <%= button_to "−", record_label_micropost_vote_path(micropost), method: :delete, class: "linwood" %>
                <% elsif producer_signed_in? && current_producer.record_label_micropost_voted?(micropost) %>
                  <%= button_to "−", record_label_micropost_vote_path(micropost), method: :delete, class: "linwood" %>
                <% else %>
                  <%= form_for(RecordLabelMicropostVote.new, url: record_label_micropost_votes_path) do |f| %>
                    <%= hidden_field_tag :record_label_micropost_id, micropost.id %>
                    <%= f.submit "+", class: "linwood" %>
                  <% end %>
                <% end %>


                <strong><%= micropost.record_label_micropost_votes.count %></strong> // <a class="linden"><span class="comments_count_<%= micropost.id %>">
                  <%= render 'recordlabels/partials/comments/index_comments_count', :micropost => micropost %>
                </span></a>
              </div>

              <div class="walden">
                <div class="minnesota">

                  <div class="comments_js_<%= micropost.id %>">
                    <%= render 'recordlabels/partials/comments/index_comments', :micropost => micropost %>
                  </div>

                  <div class="comments_form_<%= micropost.id %>">
                    <%= render "recordlabels/partials/comments/index_comments_form", :micropost => micropost %>
                  </div>

                </div>
              </div>

            </div>
          <% end %>
        </div>
      <% end %>

    </div>


    <div class="pearl">

      <% if @record_label == current_record_label %>
      <% else %>
      <div class="washington">
        <div class="lisbon">
        <div class="follow_button">
          <%= render 'recordlabels/partials/relationships/follow_button' %>
        </div>
        </div>
      </div>
      <% end %>

      <div id="follower_count">
        <%= render 'recordlabels/partials/relationships/follower_count' %>
      </div>

      <% if record_label_signed_in? && @record_label.id == current_record_label.id && @record_label.record_label_profile.location == "" && @record_label.record_label_profile.founded == "" && @record_label.record_label_profile.artists == "" && @record_label.record_label_profile.biography == "" && @record_label.record_label_profile.facebook_url == "" && @record_label.record_label_profile.twitter_url == "" && @record_label.record_label_profile.youtube_url == "" && @record_label.record_label_profile.itunes_url == "" && @record_label.record_label_profile.amazon_url == "" && @record_label.record_label_profile.google_play_url == "" && @record_label.record_label_profile.website == ""  %>
        <p class="hertel">you do not have any profile information</p>
        <div class="jefferson">
          <%= link_to "update your profile", edit_record_label_profile_path(current_record_label) %>
        </div>
      <% elsif @record_label.record_label_profile.location == "" && @record_label.record_label_profile.founded == "" && @record_label.record_label_profile.artists == "" && @record_label.record_label_profile.biography == "" && @record_label.record_label_profile.facebook_url == "" && @record_label.record_label_profile.twitter_url == "" && @record_label.record_label_profile.youtube_url == "" && @record_label.record_label_profile.itunes_url == "" && @record_label.record_label_profile.amazon_url == "" && @record_label.record_label_profile.google_play_url == "" && @record_label.record_label_profile.website == "" %>
        <p class="hertel"><%= "#{@record_label.label_name} does not have any profile information yet" %></p>
      <% end %>
      <% if @record_label.record_label_profile.location == "" %>
      <% else %>
      <p class="jefferson">location //</p>
      <p class="fillmore"><%= @record_label.record_label_profile.location %></p>
      <% end %>
      <% if @record_label.record_label_profile.founded == "" %>
      <% else %>
      <p class="jefferson">founded //</p>
      <p class="fillmore"><%= @record_label.record_label_profile.founded %></p>
      <% end %>
      <% if @record_label.record_label_profile.artists == "" %>
      <% else %>
      <p class="jefferson">artists //</p>
      <p class="fillmore"><%= @record_label.record_label_profile.artists %></p>
      <% end %>
      <% if @record_label.record_label_profile.biography == "" %>
      <% else %>
      <p class="jefferson">biography //</p>
      <p class="fillmore"><%= @record_label.record_label_profile.biography %></p>
      <% end %>
      <% if @record_label.record_label_profile.website == "" %>
      <% else %>
      <p class="fillmore"><%= link_to "Website", @record_label.record_label_profile.website %></p>
      <% end %>
      <% if @record_label.record_label_profile.facebook_url == "" %>
      <% else %>
      <p class="fillmore"><%= link_to "Facebook", @record_label.record_label_profile.facebook_url %></p>
      <% end %>
      <% if @record_label.record_label_profile.twitter_url == "" %>
      <% else %>
      <p class="fillmore"><%= link_to "Twitter", @record_label.record_label_profile.twitter_url %></p>
      <% end %>
      <% if @record_label.record_label_profile.youtube_url == "" %>
      <% else %>
      <p class="fillmore"><%= link_to "YouTube", @record_label.record_label_profile.youtube_url %></p>
      <% end %>
      <% if @record_label.record_label_profile.itunes_url == "" %>
      <% else %>
      <p class="fillmore"><%= link_to "iTunes", @record_label.record_label_profile.itunes_url %></p>
      <% end %>
      <% if @record_label.record_label_profile.amazon_url == "" %>
      <% else %>
      <p class="fillmore"><%= link_to "Amazon", @record_label.record_label_profile.amazon_url %></p>
      <% end %>
      <% if @record_label.record_label_profile.google_play_url == "" %>
      <% else %>
      <p class="fillmore"><%= link_to "Google Play", @record_label.record_label_profile.google_play_url %></p>
      <% end %>
    </div>
  </div>
</div>
<%= render "partials/uni_footer" %>

<% if buffalo_signed_in? %>
  <div class="forest">
    <li><%= @record_label.id %></li>
    <li><%= @record_label.label_name %></li>
    <li><%= @record_label.username %></li>
    <li><%= @record_label.email %></li>
    <li><%= @record_label.sign_in_count %></li>
    <li><%= @record_label.last_sign_in_at %></li>
  </div>
<% end %>
