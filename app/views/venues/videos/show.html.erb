<%= provide(:title, sanitize(@venue.venue_name) + " | #{@video.title}") %>
<div class="buffalo">

  <%= render 'venues/partials/venue_cover_image' %>

  <div class="delaware">

    <main class="main">

      <ul class="carolina">
        <li><%= link_to "timeline", venue_path(@venue) %></li>
        <li><%= link_to "shows", venue_shows_path(@venue) %></li>
        <li class="jersey"><%= link_to "videos", venue_videos_path(@venue) %></li>
      </ul>

      <div class="hedley">
        <%= @venue.venue_name %>
      </div>

      <div class="following sterling">
        <%= render 'venues/partials/relationships/following' %>
      </div>

      <div class="niagara">
        <div class="follower_count sterling">
          <%= render 'venues/partials/relationships/follower_count' %>
        </div>
      </div>

      <% unless @venue == current_venue %>
      <div class="niagara">
        <div class="highgate">
        <div class="follow_button">
          <%= render 'venues/partials/relationships/follow_button' %>
        </div>
        </div>
      </div>
      <% end %>

      <div class="amherst">
        <div class="harlem">
          <div class="plymouth">
            <%= embed(@video.youtube_url) %>
          </div>
          <div class="vermont auburn">
            <%= @video.title %>
            <% if @venue == current_venue %>
              // <%= link_to "edit", edit_venue_video_path(@venue, @video) %> or <%= link_to "delete", venue_video_path(@venue, @video), data: { confirm: "Are you sure? This cannot be undone. Ever..." }, method: :delete %>
            <% end %>
          </div>
        </div>
        <div class="best">
          <%= @video.description %>
        </div>
      </div>

    </main>

    <%= render 'venues/partials/venue_sidebar' %>

  </div>
</div>
<%= render "partials/uni_footer" %>
