          <div class="amherst kings">
            <% if Artist.exists?(:artist_name => "#{@show.support_artist6}") %>
              <%= link_to @show.support_artist6, artist_path(Artist.where(:artist_name => "#{@show.support_artist6}").first) %>
            <% else %>
              <%= @show.support_artist6 %>
            <% end %>
          </div>
        <% end %>
        <% if @show.support_artist7.present? %>
          <div class="amherst kings">
            <% if Artist.exists?(:artist_name => "#{@show.support_artist7}") %>
              <%= link_to @show.support_artist7, artist_path(Artist.where(:artist_name => "#{@show.support_artist7}").first) %>
            <% else %>
              <%= @show.support_artist7 %>
            <% end %>
          </div>
        <% end %>

        <div class="best">
          <%= @show.description %>
        </div>
      </div>

    </main>

    <%= render 'venues/partials/venue_sidebar' %>

  </div>
</div>
