<%= provide(:title, sanitize(@venue.venue_name) + " | Show #{@show.id}") %>
<div class="buffalo">

  <%= render 'venues/partials/venue_cover_image' %>

  <div class="delaware">

    <main class="main">

      <ul class="carolina">
        <li><%= link_to "timeline", venue_path(@venue) %></li>
        <li class="jersey"><%= link_to "shows", venue_shows_path(@venue) %></li>
        <li><%= link_to "videos", venue_videos_path(@venue) %></li>
      </ul>

      <%= render 'venues/partials/venue_name' %>

      <div class="harlem">
        <% if @show.flyer_img_file_name.present? %>
        <div class="fargo">
          <div id="riley">
            <img srcset="<%= @show.flyer_img.url(:perfect) %>" width="100%" height="auto" />
          </div>
        </div>
        <div class="fargo">
          <div class="vermont busti">
            <% if Artist.exists?(:artist_name => "#{@show.headline_artist}") %>
              <%= link_to @show.headline_artist, artist_path(Artist.where(:artist_name => "#{@show.headline_artist}").first) %>
            <% else %>
              <%= @show.headline_artist %>
            <% end %>
          </div>
          <div class="vermont busti">
            <%= @show.month %>.<%= @show.day %>.<%= @show.year %>
          </div>
          <div class="vermont busti">
            <% if Venue.exists?(:venue_name => "#{@show.show_venue}") %>
              <%= link_to @show.show_venue, venue_path(Venue.where(:venue_name => "#{@show.show_venue}").first) %>
            <% else %>
              <%= @show.show_venue %>
            <% end %>
          </div>
          <div class="vermont busti">
            <%= @show.location %>
          </div>
          <% if @show.ticket_url.present? %>
          <div class="vermont busti">
            <%= link_to "get tickets", @show.ticket_url, class: "sugar" %>
          </div>
          <% end %>
          <% if @venue == current_venue %>
          <div class="amherst busti">
            // <%= link_to "edit", edit_venue_show_path(@venue, @show) %> or <%= link_to "delete", venue_show_path(@venue, @show), data: { confirm: "Are you sure? This cannot be undone. Ever..." }, method: :delete %>
          </div>
          <% end %>
        </div>
        <% else %>
          <div class="vermont">
            <% if Artist.exists?(:artist_name => "#{@show.headline_artist}") %>
              <%= link_to @show.headline_artist, artist_path(Artist.where(:artist_name => "#{@show.headline_artist}").first) %>
            <% else %>
              <%= @show.headline_artist %>
            <% end %>
          </div>
          <div class="vermont">
            <%= @show.month %>.<%= @show.day %>.<%= @show.year %>
          </div>
          <div class="vermont">
            <% if Venue.exists?(:venue_name => "#{@show.show_venue}") %>
              <%= link_to @show.show_venue, venue_path(Venue.where(:venue_name => "#{@show.show_venue}").first) %>
            <% else %>
              <%= @show.show_venue %>
            <% end %>
          </div>
          <div class="vermont">
            <%= @show.location %>
          </div>
          <% if @show.ticket_url.present? %>
          <div class="harlem">
            <%= link_to "get tickets", @show.ticket_url, class: "sugar" %>
          </div>
          <% end %>
          <% if @venue == current_venue %>
          <div class="amherst">
            // <%= link_to "edit", edit_venue_show_path(@venue, @show) %> or <%= link_to "delete", venue_show_path(@venue, @show), data: { confirm: "Are you sure? This cannot be undone. Ever..." }, method: :delete %>
          </div>
          <% end %>
        <% end %>

        <% if @show.support_artist1.present? %>
          <div class="amherst kings">
            <% if Artist.exists?(:artist_name => "#{@show.support_artist1}") %>
              <%= link_to @show.support_artist1, artist_path(Artist.where(:artist_name => "#{@show.support_artist1}").first) %>
            <% else %>
