<%= provide(:title, "Discover Artist Merch") %>
<%= render "partials/uni_header" %>
<div class="buffalo">
  <div class="delaware">

    <div class="washington">
      <div class="fargo">
        <div class="bird">
          discover artist videos
        </div>
      </div>
    </div>
    <div class="fargo">
      <%= form_tag(artists_path, :method => "get") do %>
        <div class="highgate">
          <%= text_field_tag :search, params[:search], placeholder: "search artists", class: "huron" %>
        </div>
          <%= submit_tag "search", class: "exchange", :style => "display: none;" %>
      <% end %>
    </div>

    <ul class="potomac">
      <li><%= link_to "artists", artists_path %></li>
      <li><%= link_to "timeline", index_artist_microposts_path %></li>
      <li class="jersey"><%= link_to "merch", index_artist_merch_path %></li>
      <li><%= link_to "shows", index_artist_shows_path %></li>
      <li><%= link_to "videos", index_artist_videos_path %></li>
    </ul>

    <% if @merch.any? %>

    <div class="washington">
      <div class="highgate">
        <div id="popular" class="porter lafayette">
          popular
        </div>
        <div id="recent" class="porter">
          recent
        </div>
        <div id="location" class="porter">
        <% if fan_signed_in? && current_fan.fan_profile.location.present? %>
          <%= current_fan.fan_profile.location.downcase %>
        <% else %>
          location
        <% end %>
        </div>
      </div>
    </div>

    <div class="niagara">
      <div class="highgate">
      <center>
        <div id="mpopular" class="porter lafayette">
          <strong>popular</strong>
        </div>
        <div id="mrecent" class="porter">
          <strong>recent</strong>
        </div>
        <div id="mlocation" class="porter">
          <strong>location</strong>
        </div>
      </center>
      </div>
    </div>

    <div id="container-popular" class="ferry">
      <% @merch.take(100).each do |merch| %>
        <div class="utica">
          <% if merch.image_url.present? %>
          <div class="loretta">
            <%= link_to image_tag("#{merch.image_url}", :width => "100%"), artist_merch_path(merch.artist, merch) %>
          </div>
          <% else %>
            <% if merch.artist == current_artist %>
              you do not have an image for this item. <%= link_to "add one?", edit_artist_merch_path(merch.artist, merch) %>
            <% else %>
              <%= merch.artist.artist_name %> does not have an image for <%= merch.title %>.
            <% end %>
          <% end %>
          <div class="amherst busti">
            <%= link_to merch.artist.artist_name, artist_path(merch.artist) %>
          </div>
          <div class="hertel busti blaine">
            <%= link_to merch.title, artist_merch_path(merch.artist, merch), class: "sugar" %>
          </div>
          <div class="hertel busti">
            <%= merch.artist.artist_profile.location unless merch.artist.artist_profile.location.blank? %>
          </div>
          <div class="hertel">
            <div class="index_follower_count_<%= merch.artist.id %>">
              <%= render "artists/partials/relationships/index_follower_count", :artist => merch.artist %>
            </div>
          </div>

          <div class="index_follow_button_<%= merch.artist.id %>">
            <%= render "artists/partials/relationships/index_follow_button", :artist => merch.artist %>
          </div>

        </div>
      <% end %>
    </div>

    <div id="container-recent" class="ferry colvin">
      <% @merch.order( 'id DESC' ).take(100).each do |merch| %>
        <div class="utica">
          <% if merch.image_url.present? %>
          <div class="loretta">
            <%= link_to image_tag("#{merch.image_url}", :width => "100%"), artist_merch_path(merch.artist, merch) %>
          </div>
          <% else %>
            <% if merch.artist == current_artist %>
              you do not have an image for this item. <%= link_to "add one?", edit_artist_merch_path(merch.artist, merch) %>
            <% else %>
              <%= merch.artist.artist_name %> does not have an image for <%= merch.title %>.
            <% end %>
          <% end %>
          <div class="amherst busti">
            <%= link_to merch.artist.artist_name, artist_path(merch.artist) %>
          </div>
          <div class="hertel busti blaine">
            <%= link_to merch.title, artist_merch_path(merch.artist, merch), class: "sugar" %>
          </div>
          <div class="hertel busti">
            <%= merch.artist.artist_profile.location unless merch.artist.artist_profile.location.blank? %>
          </div>
          <div class="hertel">
            <div class="index_follower_count_<%= merch.artist.id %>">
              <%= render "artists/partials/relationships/index_follower_count", :artist => merch.artist %>
            </div>
          </div>

          <div class="index_follow_button_<%= merch.artist.id %>">
            <%= render "artists/partials/relationships/index_follow_button", :artist => merch.artist %>
          </div>

        </div>
      <% end %>
    </div>

    <div id="container-location" class="ferry colvin">
      <% if fan_signed_in? && current_fan.fan_profile.location.present? %>
        <% @merch.each do |merch| if merch.artist.artist_profile.location == current_fan.fan_profile.location %>
        <div class="utica">
          <% if merch.image_url.present? %>
          <div class="loretta">
            <%= link_to image_tag("#{merch.image_url}", :width => "100%"), artist_merch_path(merch.artist, merch) %>
          </div>
          <% else %>
            <% if merch.artist == current_artist %>
              you do not have an image for this item. <%= link_to "add one?", edit_artist_merch_path(merch.artist, merch) %>
            <% else %>
              <%= merch.artist.artist_name %> does not have an image for <%= merch.title %>.
            <% end %>
          <% end %>
          <div class="amherst busti">
            <%= link_to merch.artist.artist_name, artist_path(merch.artist) %>
          </div>
          <div class="hertel busti blaine">
            <%= link_to merch.title, artist_merch_path(merch.artist, merch), class: "sugar" %>
          </div>
          <div class="hertel busti">
            <%= merch.artist.artist_profile.location unless merch.artist.artist_profile.location.blank? %>
          </div>
          <div class="hertel">
            <div class="index_follower_count_<%= merch.artist.id %>">
              <%= render "artists/partials/relationships/index_follower_count", :artist => merch.artist %>
            </div>
          </div>

          <div class="index_follow_button_<%= merch.artist.id %>">
            <%= render "artists/partials/relationships/index_follow_button", :artist => merch.artist %>
          </div>

        </div>
        <% end %>
        <% end %>
      <% elsif fan_signed_in? && current_fan.fan_profile.location.blank? %>
        <div class="hertel">
          <center>Your location is blank! Go set it on <%= link_to "your profile", edit_fan_profile_path(current_fan) %>.</center>
        </div>
      <% else %>
        <div class="harlem">
          <center><%= link_to "sign in", new_fan_session_path %> to view artists based on location</center>
        </div>
      <% end %>
    </div>

    <% end %>
  </div>
</div>
<%= render "partials/uni_footer" %>
