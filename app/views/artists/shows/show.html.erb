<%= provide(:title, sanitize(@artist.artist_name) + " | Show #{@show.id}") %>
<div class="buffalo">

  <%= render 'artists/partials/artist_cover_image' %>

  <div class="delaware">

    <main class="main">

      <ul class="carolina">
        <li><%= link_to "timeline", artist_path(@artist) %></li>
        <li><%= link_to "music", artist_albums_path(@artist) %></li>
        <li><%= link_to "merch", artist_merches_path(@artist) %></li>
        <li class="jersey"><%= link_to "shows", artist_shows_path(@artist) %></li>
        <li><%= link_to "videos", artist_videos_path(@artist) %></li>
      </ul>

      <%= render 'artists/partials/artist_name' %>

      <div class="harlem">
        <% if @show.flyer_img_file_name.present? %>
        <div class="fargo">
          <div id="riley">
            <img srcset="<%= @show.flyer_img.url(:perfect) %>" width="100%" height="auto" />
          <div>
        </div>
        <div class="fargo">
          <div class="vermont busti">
            <%= @show.month %>.<%= @show.day %>.<%= @show.year %>
          </div>
          <div class="vermont busti">
            <% if Venue.exists?(:venue_name => "#{@show.venue}") %>
              <%= link_to @show.venue, venue_path(Venue.where(:venue_name => "#{@show.venue}").first) %>
            <% else %>
              <%= @show.venue %>
            <% end %>
          </div>
          <div class="vermont busti">
            <%= @show.location %>
          </div>
          <% if @show.ticket_url.present? %>
          <div class="vermont busti">
            <%= link_to "get tickets", @show.ticket_url, class: "sugar" %>
          </div>
          <% end %>
          <% if @artist == current_artist %>
          <div class="amherst busti">
            // <%= link_to "edit", edit_artist_show_path(@artist, @show) %> or <%= link_to "delete", artist_show_path(@artist, @show), data: { confirm: "Are you sure? This cannot be undone. Ever..." }, method: :delete %>
          </div>
          <% end %>
        </div>
        <% else %>
          <div class="vermont">
            <%= @show.month %>.<%= @show.day %>.<%= @show.year %>
          </div>
          <div class="vermont">
            <% if Venue.exists?(:venue_name => "#{@show.venue}") %>
              <%= link_to @show.venue, venue_path(Venue.where(:venue_name => "#{@show.venue}").first) %>
            <% else %>
              <%= @show.venue %>
            <% end %>
          </div>
          <div class="vermont">
            <%= @show.location %>
          </div>
          <% if @show.ticket_url.present? %>
          <div class="vermont">
            <%= link_to "get tickets", @show.ticket_url, class: "sugar" %>
          </div>
          <% end %>
          <% if @artist == current_artist %>
          <div class="amherst">
            // <%= link_to "edit", edit_artist_show_path(@artist, @show) %> or <%= link_to "delete", artist_show_path(@artist, @show), data: { confirm: "Are you sure? This cannot be undone. Ever..." }, method: :delete %>
          </div>
          <% end %>
        <% end %>
        <div class="best">
          <%= @show.description %>
        </div>
      </div>

    </main>

    <%= render 'artists/partials/artist_sidebar' %>

  </div>
</div>
<%= render "partials/uni_footer" %>

<% if @show.flyer_img_file_name.present? %>
  <div id="back"></div>
  <div id="front">
    <div class="lightbox-image">
    <div id="close"></div>
      <img srcset="<%= @show.flyer_img.url(:perfect) %>" width="100%" height="auto" />
    </div>
  </div>
<% end %>
