<%= provide(:title, sanitize(@artist.artist_name) + " | Show #{@show.id}") %>
<div class="buffalo">

  <%= render 'artists/partials/artist_cover_image' %>

  <div class="delaware">

    <main class="main">

      <ul class="carolina">
        <li><%= link_to "timeline", artist_path(@artist) %></li>
        <li class="jersey"><%= link_to "shows", artist_shows_path(@artist) %></li>
      </ul>

      <div class="hedley">
        <%= @artist.artist_name %>
      </div>

      <div class="following sterling">
        <%= render 'artists/partials/relationships/following' %>
      </div>

      <div class="niagara">
        <div class="follower_count sterling">
          <%= render 'artists/partials/relationships/follower_count' %>
        </div>
      </div>

      <% unless @artist == current_artist %>
      <div class="niagara">
        <div class="highgate">
        <div class="follow_button">
          <%= render 'artists/partials/relationships/follow_button' %>
        </div>
        </div>
      </div>
      <% end %>

      <div class="harlem">
        <% if @show.flyer_url.present? %>
        <div class="fargo">
            <img srcset="<%= @show.flyer_url %>" width="100%" height="auto" />
        </div>
        <div class="fargo">
          <div class="vermont busti">
            <%= @show.month %>.<%= @show.day %>.<%= @show.year %>
          </div>
          <div class="vermont busti">
            <% if Venue.exists?(:venue_name => "#{@show.venue}") %>
              <%= link_to @show.venue, venue_path(Venue.where(:venue_name => "#{@show.venue}").first) %>
            <% else %>
              <%= @show.venue %>
            <% end %>
          </div>
          <div class="vermont busti">
            <%= @show.location %>
          </div>
          <% if @show.ticket_url.present? %>
          <div class="vermont busti">
            <%= link_to "get tickets", @show.ticket_url, class: "sugar" %>
          </div>
          <% end %>
          <% if @artist == current_artist %>
          <div class="amherst busti">
            // <%= link_to "edit", edit_artist_show_path(@artist, @show) %> or <%= link_to "delete", artist_show_path(@artist, @show), data: { confirm: "Are you sure? This cannot be undone. Ever..." }, method: :delete %>
          </div>
          <% end %>
        </div>
        <% else %>
          <div class="vermont">
            <%= @show.month %>.<%= @show.day %>.<%= @show.year %>
          </div>
          <div class="vermont">
            <% if Venue.exists?(:venue_name => "#{@show.venue}") %>
              <%= link_to @show.venue, venue_path(Venue.where(:venue_name => "#{@show.venue}").first) %>
            <% else %>
              <%= @show.venue %>
            <% end %>
          </div>
          <div class="vermont">
            <%= @show.location %>
          </div>
          <% if @show.ticket_url.present? %>
          <div class="harlem">
            <%= link_to "get tickets", @show.ticket_url, class: "sugar" %>
          </div>
          <% end %>
          <% if @artist == current_artist %>
          <div class="amherst">
            // <%= link_to "edit", edit_artist_show_path(@artist, @show) %> or <%= link_to "delete", artist_show_path(@artist, @show), data: { confirm: "Are you sure? This cannot be undone. Ever..." }, method: :delete %>
          </div>
          <% end %>
        <% end %>
        <div class="best">
          <%= @show.description %>
        </div>
      </div>

    </main>

    <%= render 'artists/partials/artist_sidebar' %>

  </div>
</div>
<%= render "partials/uni_footer" %>
