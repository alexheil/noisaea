<%= provide(:title, "Edit An Album") %>
<div class="buffalo">
  <div class="delaware">
    <div class="elmwood">
      <div class="harlem">
        <h1>edit <%= @album.title %></h1>
      </div>

      <%= form_for(@album, url: artist_album_path) do |f| %>
        <%= f.hidden_field :artist_id %>
        <%= render 'errors/album_errors' %>
        <div class="highgate">
          <div class="amherst temp">
            album name
          </div>
          <%= f.text_field :title, class: "huron" %>
        </div>
        <div class="maryland">
          <div class="amherst temp">
            month
          </div>
          <%= f.text_field :month, class: "huron" %>
        </div>
        <div class="maryland">
          <div class="amherst temp">
            day
          </div>
          <%= f.text_field :day, class: "huron" %>
        </div>
        <div class="maryland">
          <div class="amherst temp">
            year
          </div>
          <%= f.text_field :year, class: "huron" %>
        </div>
        <div class="hudson">
          <div class="amherst temp">
            price
          </div>
          <%= f.text_field :price, class: "huron" %>
        </div>
        <div class="hudson">
          <div class="amherst temp">
            currency
          </div>
          <%= f.select :currency, options_for_select(currency_select)%>
        </div>
        <div class="highgate">
          <div class="amherst temp">
            album url
          </div>
          <%= f.text_field :album_url, class: "huron" %>
        </div>
        <div class="highgate">
          <div class="highgate temp">
            cover art: <span class="posted">1500x1500</span>
          </div>
          <%= f.file_field :cover_img %>
        </div>
        <div class="highgate">
          <div class="amherst temp">
            description
          </div>
          <%= f.text_area :description, class: "chippewa" %>
        </div>
        <div class="ellicott">
          <%= f.submit "update album", data: { disable_with: 'updating...' }, class: "exchange" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
<%= render 'partials/uni_footer' %>
