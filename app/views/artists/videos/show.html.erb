<%= provide(:title, sanitize(@artist.artist_name) + " | #{@video.title}") %>
<div class="buffalo">

  <%= render 'artists/partials/artist_cover_image' %>

  <div class="delaware">

    <main class="main">

      <ul class="carolina">
        <li><%= link_to "timeline", artist_path(@artist) %></li>
        <li><%= link_to "merch", artist_merches_path(@artist) %></li>
        <li><%= link_to "shows", artist_shows_path(@artist) %></li>
        <li class="jersey"><%= link_to "videos", artist_videos_path(@artist) %></li>
      </ul>

      <div class="hedley">
        <%= @artist.artist_name %>
      </div>

      <div class="following sterling">
        <%= render 'artists/partials/relationships/following' %>
      </div>

      <div class="niagara">
        <div class="follower_count sterling">
          <%= render 'artists/partials/relationships/follower_count' %>
        </div>
      </div>

      <% unless @artist == current_artist %>
      <div class="niagara">
        <div class="highgate">
        <div class="follow_button">
          <%= render 'artists/partials/relationships/follow_button' %>
        </div>
        </div>
      </div>
      <% end %>

      <div class="amherst">
        <div class="harlem">
          <div class="plymouth">
            <%= embed(@video.youtube_url) %>
          </div>
          <div class="vermont auburn">
            <%= @video.title %>
            <% if @artist == current_artist %>
              // <%= link_to "edit", edit_artist_video_path(@artist, @video) %> or <%= link_to "delete", artist_video_path(@artist, @video), data: { confirm: "Are you sure? This cannot be undone. Ever..." }, method: :delete %>
            <% end %>
          </div>
        </div>
        <div class="best">
          <%= @video.description %>
        </div>
      </div>

    </main>

    <%= render 'artists/partials/artist_sidebar' %>

  </div>
</div>
<%= render "partials/uni_footer" %>
