<%= provide(:title, "Edit | " + sanitize(@merch.title)) %>
<div class="buffalo">
  <div class="delaware">
    <div class="elmwood">
      <div class="harlem">
        <h1>edit <%= @merch.title %></h1>
      </div>

      <%= form_for(@merch, url: artist_merch_path) do |f| %>
        <%= f.hidden_field :artist_id %>
        <%= render 'errors/merch_errors' %>
        <div class="highgate">
          <div class="amherst temp">
            title
          </div>
          <%= f.text_field :title, class: "huron" %>
        </div>
        <div class="hudson">
          <div class="amherst temp">
            category
          </div>
          <%= f.select :category, options_for_select(category_select)%>
        </div>
        <div class="hudson">
          <div class="amherst temp">
            quantity
          </div>
          <%= f.text_field :quantity, class: "huron" %>
        </div>
        <div class="highgate">
          <div class="amherst temp">
            options <span class="posted">(optional, separate with comma)</span>
          </div>
          <%= f.text_field :options, class: "huron" %>
        </div>
        <div class="maryland">
          <div class="amherst temp">
            base price
          </div>
          <%= f.text_field :base_price, class: "huron" %>
        </div>
        <div class="maryland">
          <div class="amherst temp">
            shipping price
          </div>
          <%= f.text_field :shipping_price, class: "huron" %>
        </div>
        <div class="maryland">
          <div class="amherst temp">
            currency
          </div>
          <%= f.select :currency, options_for_select(currency_select)%>
        </div>
        <div class="highgate">
          <div class="highgate temp">
            merch image: <span class="posted">1000x1000</span>
          </div>
          <%= f.file_field :item_img %>
        </div>
        <div class="highgate">
          <div class="amherst temp">
            description
          </div>
          <%= f.text_area :description, class: "chippewa" %>
        </div>
        <div class="ellicott">
          <%= f.submit "edit merch", data: { disable_with: 'posting...' }, class: "exchange" %>
        </div>
      <% end %>

      <% unless @artist.artist_payment_setting %>
      <div class="livingston auburn">
        you can display this on Noisaea, but in order to sell this item you need to <%= link_to "create a merchant account", new_artist_payment_setting_path(@artist) %>.
      </div>
      <% end %>

    </div>
  </div>
</div>
<%= render 'partials/uni_footer' %>
