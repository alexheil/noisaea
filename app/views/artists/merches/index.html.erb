<%= provide(:title, sanitize(@artist.artist_name) + " | Merch") %>
<div class="buffalo">

  <%= render 'artists/partials/artist_cover_image' %>

  <div class="delaware">

    <main class="main">

      <ul class="carolina">
        <li><%= link_to "timeline", artist_path(@artist) %></li>
        <li class="jersey"><%= link_to "merch", artist_merches_path(@artist) %></li>
        <li><%= link_to "shows", artist_shows_path(@artist) %></li>
        <li><%= link_to "videos", artist_videos_path(@artist) %></li>
      </ul>

      <div class="hedley">
        <%= @artist.artist_name %>
      </div>

      <div class="following sterling">
        <%= render 'artists/partials/relationships/following' %>
      </div>

      <div class="niagara">
        <div class="follower_count sterling">
          <%= render 'artists/partials/relationships/follower_count' %>
        </div>
      </div>

      <% unless @artist == current_artist %>
      <div class="niagara">
        <div class="highgate">
        <div class="follow_button">
          <%= render 'artists/partials/relationships/follow_button' %>
        </div>
        </div>
      </div>
      <% end %>

      <% if @artist == current_artist %>
        <div class="harlem vermont">
          <%= link_to "add merch", new_artist_merch_path(@artist), class: "sugar" %>
        </div>
      <% end %>

      <% if @artist.artist_merches.any? %>
        <% @artist.artist_merches.each do |merch| %>
        <div class="bryant">
          <% if merch.image_url.present? %>
          <div class="highgate loretta">
            <%= link_to image_tag("#{merch.image_url}", :width => "100%"), artist_merch_path(@artist, merch) %>
          </div>
          <% end %>
          <div class="amherst">
            <%= link_to merch.title, artist_merch_path(@artist, merch) %>
          </div>
          <div class="amherst">
            <%= merch.total_price %> <%= merch.currency %>
          </div>
        </div>
        <% end %>
      <% end %>

    </main>

    <%= render 'artists/partials/artist_sidebar' %>

  </div>
</div>
<%= render "partials/uni_footer" %>
