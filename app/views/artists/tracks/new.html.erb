<%= provide(:title, "Add A Track") %>
<div class="buffalo">
  <div class="delaware">
    <div class="elmwood">
      <div class="harlem">
        <h1>add a track to <%= @album.title %></h1>
      </div>

      <%= form_for(@track, url: artist_album_tracks_path) do |f| %>
        <%= f.hidden_field :artist_id %>
        <%= f.hidden_field :artist_album_id %>
        <%= render 'errors/track_errors' %>
        <div class="highgate">
          <%= f.text_field :title, placeholder: "track name", class: "huron" %>
        </div>
        <div class="maryland">
          <%= f.text_field :number, placeholder: "track number", class: "huron" %>
        </div>
        <div class="maryland">
          <%= f.text_field :price, placeholder: "price", class: "huron" %>
        </div>
        <div class="maryland">
          <%= f.select :currency, options_for_select(currency_select)%>
        </div>
        <div class="highgate">
          <%= f.text_field :track_url, placeholder: "track play url", class: "huron" %>
        </div>
        <div class="highgate">
          <%= f.text_area :lyrics, placeholder: "lyrics", class: "chippewa" %>
        </div>
        <div class="ellicott">
          <%= f.submit "add track", data: { disable_with: 'posting...' }, class: "exchange" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
<%= render 'partials/uni_footer' %>
