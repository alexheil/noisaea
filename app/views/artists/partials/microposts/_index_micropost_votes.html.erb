<% if fan_signed_in? && current_fan.artist_micropost_voted?(micropost) %>
  <%= button_to "−", artist_micropost_vote_path(@artist, micropost, current_fan.artist_micropost_vote_id(micropost)), method: :delete, remote: true, class: "linwood" %>
<% elsif artist_signed_in? && current_artist.artist_micropost_voted?(micropost) %>
  <%= button_to "−", artist_micropost_vote_path(@artist, micropost, current_artist.artist_micropost_vote_id(micropost)), method: :delete, remote: true, class: "linwood" %>
<% elsif record_label_signed_in? && current_record_label.artist_micropost_voted?(micropost) %>
  <%= button_to "−", artist_micropost_vote_path(@artist, micropost, current_record_label.artist_micropost_vote_id(micropost)), method: :delete, remote: true, class: "linwood" %>
<% elsif venue_signed_in? && current_venue.artist_micropost_voted?(micropost) %>
  <%= button_to "−", artist_micropost_vote_path(@artist, micropost, current_venue.artist_micropost_vote_id(micropost)), method: :delete, remote: true, class: "linwood" %>
<% elsif producer_signed_in? && current_producer.artist_micropost_voted?(micropost) %>
  <%= button_to "−", artist_micropost_vote_path(@artist, micropost, current_producer.artist_micropost_vote_id(micropost)), method: :delete, remote: true, class: "linwood" %>
<% else %>
  <%= form_for(ArtistMicropostVote.new, url: artist_micropost_votes_path(@artist, micropost), remote: true) do |f| %>
    <%= f.submit "+", class: "linwood" %>
  <% end %>
<% end %>
