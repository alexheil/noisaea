<%= provide(:title, "Edit Merchant Account") %>
<div class="buffalo">
  <div class="delaware">
    <div class="elmwood">
      <div class="harlem">
        <h1>edit your noisaea merchant account</h1>
      </div>

      <%= form_for(@payment, url: artist_payment_settings_path) do |f| %>
        <%= f.hidden_field :artist_id %>
        <div class="hudson">
          <div class="amherst temp">
            first name
          </div>
          <%= f.text_field :first_name, class: "huron" %>
        </div>
        <div class="hudson">
          <div class="amherst temp">
            last name
          </div>
          <%= f.text_field :last_name, class: "huron" %>
        </div>
        <div class="highgate">
          <div class="amherst temp">
            country
          </div>
          <%= @payment.country %>
        </div>
        <div class="amherst temp">
          date of birth
        </div>
        <div class="maryland">
          <div class="amherst temp">
            month
          </div>
          <%= f.text_field :month, class: "huron" %>
        </div>
        <div class="maryland">
          <div class="amherst temp">
            day
          </div>
          <%= f.text_field :day, class: "huron" %>
        </div>
        <div class="maryland">
          <div class="amherst temp">
            year
          </div>
          <%= f.text_field :year, class: "huron" %>
        </div>

        <div class="highgate">
          <div class="amherst temp">
            address street
          </div>
          <%= f.text_field :line1, class: "huron" %>
        </div>
        <div class="maryland">
          <div class="amherst temp">
            city
          </div>
          <%= f.text_field :city, class: "huron" %>
        </div>
        <div class="maryland">
          <div class="amherst temp">
            postal code
          </div>
          <%= f.text_field :postal_code, class: "huron" %>
        </div>
        <div class="maryland">
          <div class="amherst temp">
            state
          </div>
          <%= f.text_field :state, class: "huron" %>
        </div>
        <div class="highgate">
          <div class="amherst temp">
            last 4 of social
          </div>
          <%= f.text_field :ssn_last_4, class: "huron" %>
        </div>

        <div class="ellicott">
          <%= f.submit "update merchant account", data: { disable_with: 'updating...' }, class: "exchange" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
<%= render 'partials/uni_footer' %>
