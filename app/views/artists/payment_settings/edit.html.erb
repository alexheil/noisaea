<%= provide(:title, "Edit Merchant Account") %>
<div class="buffalo">
  <div class="delaware">
    <div class="elmwood">
      <div class="harlem">
        <h1>edit your noisaea merchant account</h1>
      </div>

      <%= form_for(@payment, url: artist_payment_setting_path) do |f| %>
        <%= f.hidden_field :artist_id %>
        <%= render 'errors/payment_setting_errors' %>
        <div class="hudson">
          <div class="amherst temp">
            first name
          </div>
          <%= f.text_field :first_name, class: "huron" %>
        </div>
        <div class="hudson">
          <div class="amherst temp">
            last name
          </div>
          <%= f.text_field :last_name, class: "huron" %>
        </div>
        <div class="hudson">
          <div class="amherst temp">
            country
          </div>
          <%= @payment.country %>
        </div>
        <div class="hudson">
          <div class="amherst temp">
            currency
          </div>
          <%= f.select :currency, options_for_select(default_currency) %>
        </div>
        <div class="amherst temp">
          date of birth
        </div>
        <div class="maryland">
          <div class="amherst temp">
            month
          </div>
          <%= f.text_field :month, class: "huron" %>
        </div>
        <div class="maryland">
          <div class="amherst temp">
            day
          </div>
          <%= f.text_field :day, class: "huron" %>
        </div>
        <div class="maryland">
          <div class="amherst temp">
            year
          </div>
          <%= f.text_field :year, class: "huron" %>
        </div>

        <div class="amherst">
          none of this information gets stored in Noisaea's database.
        </div>
        <div class="highgate">
          <div class="amherst temp">
            street address
          </div>
          <%= f.text_field :line1, required: true, class: "huron" %>
        </div>
        <div class="maryland">
          <div class="amherst temp">
            city
          </div>
          <%= f.text_field :city, required: true, class: "huron" %>
        </div>
        <div class="maryland">
          <div class="amherst temp">
            state
          </div>
          <%= f.text_field :state, required: true, class: "huron" %>
        </div>
        <div class="maryland">
          <div class="amherst temp">
            postal code
          </div>
          <%= f.text_field :postal_code, required: true, class: "huron" %>
        </div>
        <% if @payment.country == 'US' %>
        <div class="hudson">
          <div class="amherst temp">
            personal id number
          </div>
          <%= f.text_field :personal_id_number, required: true, class: "huron" %>
        </div>
        <div class="hudson">
          <div class="amherst temp">
            last 4 of social
          </div>
          <%= f.text_field :ssn_last_4, required: true, class: "huron" %>
        </div>
        <% end %>
        <div class="highgate temp">
          where will your money go?
        </div>
        <div class="amherst">
          this is not saved to Noisaea's database. only fill this out if you want to create a new bank account to transfer funds to.
        </div>
        <div class="highgate">
          <div class="amherst temp">
            bank account number
          </div>
          <%= f.text_field :bank_account_number, class: "huron" %>
        </div>
        <% if @payment.country == 'US' %>
        <div class="highgate">
          <div class="amherst temp">
            bank routing number
          </div>
          <%= f.text_field :bank_routing_number, class: "huron" %>
        </div>
        <% end %>


        <div class="ellicott">
          <%= f.submit "update merchant account", data: { disable_with: 'updating...' }, class: "exchange" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
<%= render 'partials/uni_footer' %>
