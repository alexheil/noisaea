  a {
    color: <%= @artist.artist_profile.theme_color %>;
  }
  a:hover {
    color: #212121;
  }
  .linwood {
    color: <%= @artist.artist_profile.theme_color %>;
  }
  .linwood:hover {
    color: #212121;
  }
  .dodge:hover {
    border-right: 3px solid <%= @artist.artist_profile.theme_color %>;
  }
  .exchange {
    border: 3px solid <%= @artist.artist_profile.theme_color %>;
    color: <%= @artist.artist_profile.theme_color %>;
  }
  .exchange:hover {
    background: <%= @artist.artist_profile.theme_color %>;
  }
  .carolina li:hover {
    border-right: 3px solid <%= @artist.artist_profile.theme_color %>;
  }
  ::selection {
    background: <%= @artist.artist_profile.theme_color %>;
  }
  </style>
